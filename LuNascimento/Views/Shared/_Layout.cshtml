<!DOCTYPE html>
<html>

<head>
   <!-- Basic -->
   <meta charset="utf-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />
   <title>LuNascimento | @ViewData["Title"]</title>
   <!-- Mobile Metas -->
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
   <!-- Site Metas -->
   <meta name="keywords" content="" />
   <meta name="description" content="" />
   <meta name="author" content="" />
   <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
   <title></title>
   <!-- bootstrap core css -->
   <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
   <!-- font awesome style -->
   <link href="~/css/font-awesome.min.css" rel="stylesheet" />
   <!-- Custom styles for this template -->
   <link href="~/css/style.css" rel="stylesheet" />
   <!-- responsive style -->
   <link href="~/css/responsive.css" rel="stylesheet" />
</head>

<body>
   <div class="hero_area">
      <!-- header section strats -->
      <header class="header_section">
         <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
               <a class="navbar-brand"></a><a asp-action="Index"></a>
               <img width="270" src="~/images/logo.png" alt="#" />
               </a>
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                  aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class=""> </span>
               </button>
               <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav">
                     <li class='nav-item @(ViewBag.Title == "Home" ? "active" : "")'>
                        <a class="nav-link" asp-action="Index">Home</a>
                     </li>
                     <li class='nav-item @(ViewBag.Title == "Aromatizadores" ? "active" : "")'>
                        <a class="nav-link" asp-action="Products">Aromatizadores</a>
                     </li>
                     <li class='nav-item dropdown nav-item @(ViewBag.Title == "Aromas" ? "active" : "")'>
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="true"> <span class="nav-label">AROMAS<span
                                 class="caret"></span></a>
                        <ul class="dropdown-menu">
                           <li><a asp-action="Aromas">AROMAS</a></li>
                           <li><a asp-action="Exclusivos">AROMAS EXCLUSIVOS</a></li>
                           <li><a asp-action="Aromaterapia">AROMATERAPIA</a></li>

                        </ul>
                     </li>
                     <li class='nav-item @(ViewBag.Title == "Outros" ? "active" : "")'>
                        <a class="nav-link" asp-action="Outros">Outros</a>
                     </li>
                     <li class='nav-item @(ViewBag.Title == "Quem Somos?" ? "active" : "")'>
                        <a class="nav-link" asp-action="Quemsomos">QUEM SOMOS?</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link" href="#">

                        </a>
                     </li>
                     <form class="form-inline">

                     </form>
                  </ul>
               </div>
            </nav>
         </div>
      </header>

      <!-- end header section -->

      @RenderBody()

      <!-- footer start -->
      <footer>
         <div class="container">
            <div class="row">
               <div class="col-md-4">
                  <div class="full">
                     <div class="logo_footer">
                        <a href="#"><img width="270" src="~/images/logo.png" alt="#" /></a>
                     </div>
                     
                  </div>
               </div>
               <div class="col-md-8">
                  <div class="row">
                     <div class="col-md-7">
                        <div class="row">
                           <div class="col-md-6">
                              <div class="widget_menu">
                                 <h3>Menu</h3>
                                 <ul class="d-inline-block">
                                    <li><a asp-action="Index">Home</a></li>
                                    <li><a asp-action="Products">Aromatizadores</a></li>
                                    <li><a asp-action="">Aromas</a></li>
                                    <li><a href="#">Outros</a></li>
                                    <li><a asp-action="Quemsomos">Quem somos?</a></li>
                                 </ul>
                              </div>
                           </div>

                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>

      </footer>
      <div class="cpy_">
         <p class="mx-auto">© 2023 Todos os Direitos Reservados <a href="https://html.design/">LuNascimento</a></p>
      </div>
      <!-- footer end -->

      <!-- jQery -->
      <script src="~/js/jquery-3.4.1.min.js"></script>
      <!-- popper js -->
      <script src="~/js/popper.min.js"></script>
      <!-- bootstrap js -->
      <script src="~/js/bootstrap.js"></script>
      <!-- custom js -->
      <script src="~/js/custom.js"></script>
</body>

</html>